<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".Fragment.HomeFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:layout_width="170dp"
                android:layout_height="106dp"
                android:backgroundTint="#EAEAEA"
                app:cardCornerRadius="15dp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#888F97" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/a7"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="12dp"
                        android:contentDescription="@string/lamp"
                        android:src="@drawable/lamp" />

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/btn_lamp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="6dp"
                        android:textOff="@string/off"
                        android:textOn="@string/on"
                        android:thumb="@drawable/thumb"
                        app:track="@drawable/track" />

                    <TextView
                        android:id="@+id/device_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/a7"
                        android:layout_marginStart="11dp"
                        android:text="@string/lamp"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                </RelativeLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="170dp"
                android:layout_height="106dp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/border_cardview"
                android:backgroundTint="#888F97"
                app:cardCornerRadius="15dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/television"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="12dp"
                        android:contentDescription="@string/tv_lg"
                        android:src="@drawable/baseline_tv_24" />

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/btn_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="6dp"
                        android:textOff="@string/off"
                        android:textOn="@string/on"
                        android:thumb="@drawable/thumb"
                        app:track="@drawable/track" />

                    <TextView
                        android:id="@+id/device_television"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/television"
                        android:layout_marginStart="11dp"
                        android:text="@string/tv_lg"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="26dp">

            <androidx.cardview.widget.CardView
                android:layout_width="170dp"
                android:layout_height="106dp"
                android:backgroundTint="#888F97"
                app:cardCornerRadius="15dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/a72"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="12dp"
                        android:contentDescription="@string/toshiba_ac"
                        android:src="@drawable/air" />

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/btn_ac"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="6dp"
                        android:textOff="@string/off"
                        android:textOn="@string/on"
                        android:thumb="@drawable/thumb"
                        app:track="@drawable/track" />

                    <TextView
                        android:id="@+id/device_name2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/a72"
                        android:layout_marginStart="8dp"
                        android:text="@string/toshiba_ac"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                </RelativeLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="170dp"
                android:layout_height="106dp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/border_cardview"
                android:backgroundTint="#888F97"
                app:cardCornerRadius="15dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/a71"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="12dp"
                        android:contentDescription="@string/lg_fan"
                        android:src="@drawable/fan" />

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/btn_fan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="6dp"
                        android:textOff="@string/off"
                        android:textOn="@string/on"
                        android:thumb="@drawable/thumb"
                        app:track="@drawable/track" />

                    <TextView
                        android:id="@+id/device_fan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/a71"
                        android:layout_marginStart="8dp"
                        android:text="@string/lg_fan"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                </RelativeLayout>


            </androidx.cardview.widget.CardView>


        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_main_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal">


        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_main_light"
            android:layout_width="170dp"
            android:layout_height="106dp"
            android:backgroundTint="#888F97"
            app:cardCornerRadius="15dp">

            <RelativeLayout
                android:id="@+id/relative_main_light"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/a73"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="12dp"
                    android:contentDescription="@string/main_light"
                    android:src="@drawable/baseline_lightbulb_24" />

                <TextView
                    android:id="@+id/device_name3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/a73"
                    android:layout_marginStart="8dp"
                    android:text="@string/main_light"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />
                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/btn_light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="6dp"
                    android:layout_alignParentEnd="true"
                    android:textOff="@string/off"
                    android:textOn="@string/on"
                    android:thumb="@drawable/thumb"
                    app:track="@drawable/track" />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="26dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view_temp"
                android:layout_width="170dp"
                android:layout_height="106dp"
                android:backgroundTint="#888F97"
                app:cardCornerRadius="15dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/img_temp"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="12dp"
                        android:contentDescription="@string/temperature"
                        android:src="@drawable/baseline_air_24" />


                    <TextView
                        android:id="@+id/temp_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="20dp"
                        android:layout_toEndOf="@id/img_temp"
                        android:text="@string/temperature"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/temperature_value_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_below="@id/img_temp"
                        android:layout_centerHorizontal="true"
                        android:text="@string/_25_c"
                        android:textSize="32sp"
                        android:textStyle="bold" />


                </RelativeLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view_humidity"
                android:layout_width="170dp"
                android:layout_height="106dp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/border_cardview"
                android:backgroundTint="#888F97"
                app:cardCornerRadius="15dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/img_humidity"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="12dp"
                        android:contentDescription="@string/humidity"
                        android:src="@drawable/baseline_water_drop_24" />

                    <TextView
                        android:id="@+id/humidity_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="20dp"
                        android:layout_toEndOf="@id/img_humidity"
                        android:text="@string/humidity"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/humidity_value_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_below="@id/img_humidity"
                        android:layout_centerHorizontal="true"
                        android:text="@string/_50"
                        android:textSize="32sp"
                        android:textStyle="bold" />


                </RelativeLayout>


            </androidx.cardview.widget.CardView>


        </RelativeLayout>

    </LinearLayout>




</LinearLayout>